{
    "name": "fintech-systems/whmcs-php-api",
    "description": "A PHP API to inteface with WHMCS",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "FintechSystems\\Whmcs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FintechSystems\\Whmcs\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "Eugene van der Merwe",
            "email": "eugenevdm@gmail.com"
        }
    ],
    "require": {
        "symfony/dotenv": "^5.3",
        "spatie/ray": "^1.30",
        "guzzlehttp/guzzle": "^7.5"        
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.20",
        "pestphp/pest": "^1.20"
    },    
    "extra": {
        "laravel": {
            "providers": [
                "FintechSystems\\Whmcs\\WhmcsServiceProvider"
            ]            
        },
        "aliases": {
            "Whmcs": "FintechSystems\\Whmcs\\Facades\\Whmcs"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
